$.ajax({dataType:'jsonp',url:"httpdisabled://cheezburger.com/UserSegment/widget-chz-recent-cat-2/set_widget_chz_recent_cat",data:{}});function getCookieValueByName(name){var theCookies=document.cookie.split(/[; ]+/);for(var i=0;i<theCookies.length;i++){var aName=theCookies[i].substring(0,theCookies[i].indexOf("="));if(aName==name){return theCookies[i].split("=")[1];}}}
function set_widget_chz_recent_cat(num){widget_chz_recent_cat=num;var banner_hidden=getCookieValueByName('hideBOW');if(!banner_hidden){jQuery('#bestof_banner .topbanner').fadeIn();}else{jQuery('#bestof_banner_show').fadeIn();}
jQuery('#bestof_banner div.hidethis').click(function(){jQuery('#bestof_banner .topbanner').slideUp();document.cookie="hideBOW=1;path=/;";jQuery('#bestof_banner_show').delay(500).slideDown();});jQuery('#bestof_banner_show').click(function(){jQuery('#bestof_banner_show').slideUp();jQuery('#bestof_banner .topbanner').delay(500).slideDown();document.cookie="hideBOW=1;expires=Sat, 23 Jul 1999 00:51:47 GMT;path=/;";});if(widget_chz_recent_cat<49){jQuery('ul.alpha').css('display','block');}else{jQuery('ul.beta').css('display','block');}
}